{% extends 'layouts/global.twig' %}

{% block content %}
    <h2>Kurse</h2>
    <div class="right-align">
        <a href="{{ url('course/create') }}" class="waves-effect waves-light btn green darken-1">Neuen Kurs anlegen</a>
    </div>
    <ul class="courses collection">
        {% for course in courses %}
            <li class="collection-item">
                <a href="{{ url("course/edit/#{course.id}") }}">
                    {{ course.startDate | date("d.m.Y")}} ({{ course.participants | length }} Teilnehmer)
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock content %}
