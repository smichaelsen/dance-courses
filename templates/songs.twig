{% extends 'layouts/global.twig' %}

{% block content %}
    <h2>Songs</h2>
    <div class="right-align">
        <a href="{{ url('song/create') }}" class="waves-effect waves-light btn green darken-1">Neuen Song anlegen</a>
    </div>

    <div class="row">
        <div class="col s12 l6">
            <h4>Choreos</h4>
            <ul class="songs collection">
                {% for song in choreos %}
                    <li class="collection-item">
                        <a href="{{ url("song/edit/#{song.id}") }}">
                            {{ song.artist }} - {{ song.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col s12 l6">
            <h4>Warmups</h4>
            <ul class="songs collection">
                {% for song in warmups %}
                    <li class="collection-item">
                        <a href="{{ url("song/edit/#{song.id}") }}">
                            {{ song.artist }} - {{ song.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock content %}
