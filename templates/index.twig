{% extends 'layouts/global.twig' %}

{% block content %}
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><i class="fa fa-music" aria-hidden="true"></i> Lieder</span>
                    <p>Verwalte deine Burzzi Dance Songs.</p>
                </div>
                <div class="card-action">
                    <a href="{{ url('songs') }}">Alle anzeigen</a>
                    <a href="{{ url('songs/create') }}">Neu anlegen</a>
                </div>
            </div>
        </div>
    </div>
    <ul class="collection with-header">
        <li class="collection-header"><h4>Letzte Kurse</h4></li>
        {% for course in courses %}
            <li class="collection-item">
                <a href="{{ url("course/#{course.id}/edit") }}">{{ course.name }}</a>
                <a href="{{ url("course/#{course.id}/songs") }}" class="secondary-content">
                    <i class="fa fa-music" aria-hidden="true"></i>
                </a>&nbsp;
            </li>
        {% endfor %}
    </ul>
{% endblock content %}
